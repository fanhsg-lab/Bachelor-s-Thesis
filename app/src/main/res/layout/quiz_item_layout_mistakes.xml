<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4">


    <TextView
        android:id="@+id/mistakestext"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:fontFamily="@font/kodemono"
        android:textColor="@color/lighter_grayish_blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlosmistakes"
        android:lineSpacingExtra="-2dp" />



    <TextView
        android:id="@+id/titlosmistakes"
        style="@style/titlosStyle"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:background="@drawable/next_button_drawable"
        android:padding="15dp"
        android:text="true_false"
        android:fontFamily="@font/alice"
        android:textSize="18dp"
        android:textColor="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>