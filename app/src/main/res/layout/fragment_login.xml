<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background4"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/HistorypopupLayout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/informationackground"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="πληροφορίες"
            android:textSize="28sp"
            android:fontFamily="@font/acloving"
            android:textColor="@color/text_color"
            android:gravity="center"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/text_color" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/peinirli"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:text="Συμπλήρωσε το email και τον κωδικό σου για να συνδεθείς στην εφαρμογή. Σε περίπτωση που ξέχασες τον κωδικό σου ή δεν έχεις λογαριασμό μεταβιβάσου στις αντίστοιχες σελίδες της εφαρμογής. "/>


        <ImageView
            android:id="@+id/closeBtn"
            android:layout_gravity="end"
            android:paddingTop="0dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_close"
            app:tint="@color/text_color" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ques_list_gridB"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_account" />

        <TextView
            android:id="@+id/qa_catName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/acloving"
            android:gravity="center"
            android:text="Σύνδεση"
            android:textColor="@color/text_color"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/info"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_info"
            app:tint="@color/text_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:src="@drawable/astronaft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="32sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18pt"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/muted_orange"
        android:drawableLeft="@drawable/ic_account"
        android:drawablePadding="16dp"
        android:drawableTint="@color/muted_orange"
        android:ems="10"
        android:hint="E-Mail ID"
        android:textSize="20sp"
        android:fontFamily="@font/peinirli"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/peinirli"
        android:drawableLeft="@drawable/ic_password"
        android:drawableTint="@color/muted_orange"
        android:drawablePadding="16dp"
        android:textSize="20sp"
        android:backgroundTint="@color/muted_orange"
        android:textColor="@color/white"
        android:hint="Κωδικός"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/peinirli"
        android:text="Ξέχασες τον Κωδικό σου ?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <Button
        android:id="@+id/loginB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="48dp"
        android:text="Συνδεση"
        android:background="@drawable/round_corner_button"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:elevation="3dp"
        android:fontFamily="@font/mpompa"
        android:translationZ="3dp"
        android:stateListAnimator="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgot_pass" />

    <Button
        android:id="@+id/resendVerificationButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28pt"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_corner_button"
        android:elevation="3dp"
        android:fontFamily="@font/mpompa"
        android:stateListAnimator="@null"
        android:text="Επαληθευση email"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:translationZ="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20pt"
        android:fontFamily="@font/peinirli"
        android:text="Δεν έχεις λογαριασμό ? "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginB" />

    <TextView
        android:id="@+id/signupB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:text="Εγγράψου"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/peinirli"
        android:textColor="@color/muted_orange"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/loginB" />

    <RelativeLayout
        android:id="@+id/g_singB"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="64dp"
        android:background="@color/muted_orange"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/resendVerificationButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/g_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/transparent"
            android:padding="4dp"
            android:src="@drawable/google_logo" />

        <TextView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@+id/g_img"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/peinirli"
            android:gravity="center_vertical"
            android:text="Συνδέσου με Google"
            android:textColor="@color/white"
            android:textSize="21sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>