<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadows3"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quesNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="15dp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/peinirli"
            android:text="Question No. 1"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/quesstyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingTop="15dp"
            android:fontFamily="@font/peinirli"
            android:text="Style: Multiple Choice"
            android:textColor="@color/text_color"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/qa_bookmarkB"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="7dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_backround_selected" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider3"
        android:layout_marginBottom="8dp"
        android:paddingRight="15dp"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question"
        android:textSize="18sp"
        android:text="Question"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:text="A : 123"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A : 123"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:id="@+id/optionA"
        android:textSize="17sp"
        android:paddingTop="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B : 123"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:id="@+id/optionB"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C : 123"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:id="@+id/optionC"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D : 123"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:fontFamily="@font/peinirli"
        android:id="@+id/optionD"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:text="WRONG"
        android:layout_marginRight="10dp"
        android:textSize="19sp"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/peinirli"
        android:textColor="@color/muted_orange"
        />

</LinearLayout>