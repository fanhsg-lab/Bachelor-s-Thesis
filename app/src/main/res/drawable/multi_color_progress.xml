<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>


        </shape>
    </item>

    <!-- Background Layer with light color -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#B0BEC5"
                android:endColor="#78909C"
                android:angle="0"/>
        </shape>
    </item>

    <!-- Secondary Progress with mid-tone color -->
    <item android:id="@android:id/secondaryProgress" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <gradient
                    android:startColor="#78909C"
                    android:endColor="#455A64"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>

    <!-- Primary Progress with a darker color -->
    <item android:id="@android:id/progress" android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <clip>
            <shape>
                <corners android:radius="10dp"/>
                <gradient
                    android:startColor="#455A64"
                    android:endColor="#1C313A"
                    android:angle="0"/>
            </shape>
        </clip>
    </item>

</layer-list>
