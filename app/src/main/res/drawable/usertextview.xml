<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Gradient background from light sky blue to light grayish blue -->
    <gradient
        android:endColor="#d3d6e2"
        android:centerColor="#e4e6f1"
        android:startColor="#a5abbc"
        android:centerX="0.5"
        android:angle="135"/>
    <!-- Rounded corners -->
    <corners android:radius="100dp"/>
    <!-- Optional: Border in darker grayish blue -->
    <stroke
        android:width="1dp"
        android:color="#424956"/>     <!-- grayish blue -->
</shape>
