<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nextButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="titlosStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="optionsFillUp">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="optionsFillUp2">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/yourColorWhenPressed</item>
        <item name="android:textColorPrimary">@color/yourColorWhenPressed</item>
        <item name="android:background">@color/yourDefaultColor</item>
        <!-- Customize other attributes like button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomCheckBox" parent="Theme.AppCompat.Light">
        <item name="android:buttonTint">@color/text_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.App.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <!-- Adjust text size as necessary -->
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>